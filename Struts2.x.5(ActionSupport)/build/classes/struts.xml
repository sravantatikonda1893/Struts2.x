<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="controller" extends="struts-default">
	<!-- Here, the method attribute's value is {1}. which means the method value can be obtained from prefixes of action values given in index.jsp -->
		<action name="*cal" class="controller.CalController" method="{1}">
			<result name="input">index.jsp</result>
			<result name="success">successs.jsp</result>
			
			
		</action>

	</package>
</struts>

